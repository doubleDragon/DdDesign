<?xml version="1.0" encoding="utf-8"?>
<com.wsl.library.design.DdToolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    app:dd_collapseMode="@integer/pin"
    app:dd_offset_enable="true"
    tools:background="#333">

    <com.wsl.library.design.DdToolBarView
        android:id="@+id/iv_home"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        app:dd_change_alpha="true"
        app:dd_inner_drawable="@drawable/ic_home"
        app:dd_inner_to_outer_padding="5dp"
        app:dd_outer_alpha="0"
        app:dd_outer_drawable="@drawable/ic_home_background3" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13.3dp"
        android:layout_marginStart="13.3dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/example_title"
        android:textAppearance="?android:attr/textAppearanceMedium"
        app:dd_vertical_offset="true" />


    <com.wsl.library.design.DdToolBarView
        android:id="@+id/iv_menu"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        app:dd_change_alpha="true"
        app:dd_inner_drawable="@drawable/ic_menu_manager"
        app:dd_inner_to_outer_padding="8dp"
        app:dd_outer_alpha="0"
        app:dd_outer_drawable="@drawable/ic_menu_background"
        app:dd_circle_color="#f25b4b"
        app:dd_circle_radius="2.5dp"
        app:dd_circle_alpha="255"/>

</com.wsl.library.design.DdToolbar>